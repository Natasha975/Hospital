<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="МедДосье.LoginPage"
              Title="Авторизация">
    <ContentPage.Content>
        <StackLayout Padding="20" VerticalOptions="Center">
            <Entry Placeholder="Логин" x:Name="LoginEntry"/>
            <Entry Placeholder="Пароль" x:Name="PasswordEntry" IsPassword="True"/>
            <Button Text="Войти" Clicked="OnLoginClicked" BackgroundColor="Brown" TextColor="White"/>
            <Label x:Name="ErrorLabel" TextColor="Red" IsVisible="False"/>
        </StackLayout>

     
        
    </ContentPage.Content> 
   
</ContentPage>